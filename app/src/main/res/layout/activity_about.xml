<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.About">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo"
            android:orientation="vertical">

             <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_marginTop="30dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/mapFragment"
            android:layout_below="@id/logo"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/aboutTitle"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapFragment"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="About Us"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/aboutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4sp"
                android:text="Founded by the Bluejackets Community in 1937, Bluejack Pharmacy started as a humble  business in the city of Jakarta. Today, it stands as one of the largest pharmacy  chains in Indonesia, with more than 500 stores nationwide. It is currently also listed as one of the countryâ€™s Top 500 Corporations."
                android:textAlignment="center"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="16sp" />

        </LinearLayout>

</LinearLayout>