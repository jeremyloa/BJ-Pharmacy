<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvTrans"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="200dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/transDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="5"
                android:text="TransactionDate"
                android:textColor="@color/blue1" />

            <TextView
                android:id="@+id/transMedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:includeFontPadding="false"
                android:text="Gaviscon Chewable Tablets Extra Strength Original Flavor - 100 ct"
                android:textColor="@color/black_lighter"
                android:textSize="16sp"
                android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/transPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:includeFontPadding="false"
                        android:layout_marginRight="10dp"
                        android:text="123456"
                        android:textColor="@color/blue2"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/transQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:includeFontPadding="false"
                        android:layout_marginRight="10dp"
                        android:text="123456"
                        android:textColor="@color/blue2"
                        android:textSize="16sp" />

                </LinearLayout>
                    <TextView
                        android:id="@+id/transTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:includeFontPadding="false"
                        android:layout_marginRight="10dp"
                        android:text="123456"
                        android:textColor="@color/blue1"
                        android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingMultiplier="5"
                    android:text="Update Qty: "
                    android:textColor="@color/blue1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/updQty"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue1"
                    android:fontFamily="@font/lato"
                    android:numeric="integer" />

                <Button
                    android:id="@+id/goUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue1"
                    android:fontFamily="@font/lato_bold"
                    android:text="Update"
                    android:textColor="?attr/colorOnPrimary" />

                <Button
                    android:id="@+id/goDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:text="Delete"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>